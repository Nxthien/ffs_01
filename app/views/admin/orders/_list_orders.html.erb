<thead>
  <tr>
    <th><%= t ".id" %></th>
    <th><%= t ".rec_name" %></th>
    <th><%= t ".rec_addr" %></th>
    <th><%= t ".rec_phone" %></th>
    <th><%= t ".status" %></th>
    <th><%= t ".total" %></th>
    <th><%= t ".at" %></th>
    <th><%= t ".assign" %></th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.rec_name %></td>
      <td><%= order.rec_addr %></td>
      <td><%= order.rec_phone %></td>
      <td><%= order.status %></td>
      <td><%= number_to_currency order.total %></td>
      <td><%= order.created_at %></td>
      <%= form_for [:admin, order] do |f| %>
        <td><%= f.select :shop_id, @supports.shops.collect{|key| [key.name, key.id]},
          class: "form-control" %></td>
        <td><%= f.submit t(".assign"), class: "btn btn-primary" %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
