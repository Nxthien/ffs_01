<thead>
  <tr>
    <th><%= t ".id" %></th>
    <th><%= t ".rec_name" %></th>
    <th><%= t ".rec_addr" %></th>
    <th><%= t ".rec_phone" %></th>
    <th><%= t ".status" %></th>
    <th><%= t ".total" %></th>
    <th><%= t ".at" %></th>
  </tr>
</thead>
<tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.rec_name %></td>
      <td><%= order.rec_addr %></td>
      <td><%= order.rec_phone %></td>
      <td><%= order.status %></td>
      <td><%= number_to_currency order.total %></td>
      <td><%= order.created_at %></td>
    </tr>
  <% end %>
</tbody>
