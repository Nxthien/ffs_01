<%= form_for [:admin, @product] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :image, t("views.admins.form.image"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :name, t("views.admins.form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :price, t("views.admins.form.price"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :price, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :status, t("views.admins.form.status"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-6">
              <%= f.radio_button :status, "true" %>
              <%= t ".available" %>
            </div>
            <div class="col-md-6">
              <%= f.radio_button :status, "false" %>
              <%= t "not_avilable" %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :description, t("views.admins.form.description"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <%= f.submit yield(:button_text), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
