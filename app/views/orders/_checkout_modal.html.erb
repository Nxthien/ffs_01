<div class="modal fade" id="order_modal_<%= order.id %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%= link_to "#", class: "close", "data-dismiss": "modal" do %>
          &times;
        <% end %>
        <h4 class="modal-title"><%= t ".checkout" %></h4>
      </div>
      <%= form_for @order do |f| %>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6 form-checkout">
            <%= f.label :receiver, t(".receiver") %>
            <%= f.text_field :rec_name, class: "form-control", required: true %>

            <%= f.label :number, t(".number") %>
            <%= f.text_field :rec_phone, class: "form-control", required: true %>

            <%= f.label :address, t(".address") %>
            <%= f.text_field :rec_addr, class: "form-control", required: true %>

            <%= f.hidden_field :status, value: "waiting" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t(".send"), class: "btn btn-danger" %>
          <%= link_to "#", class: "btn btn-default", "data-dismiss": "modal" do %>
            <%= t "modal.close" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
