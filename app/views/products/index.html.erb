<% provide :title, t("views.users.index") %>
<div class="product-list">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-3 col-xs-6">
        <div class="item">
          <div class="img-product">
            <%= link_to "#" do %>
              <%= image_tag product.image %>
            <% end %>
          </div>
          <div class="tittle-product">
            <%= link_to "#" do %>
              <%= product.name %>
            <% end %>
          </div>
          <div class="price-product pull-left" style="color: red; font-size: 20px;">
            <%= number_to_currency product.price %>
          </div>
          <div class="view-product pull-right">
            <%= link_to "#", class: "btn-view" do %>
              xem
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
